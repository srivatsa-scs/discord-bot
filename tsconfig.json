{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"outDir": "./dist",
		"rootDir": "./",
		"removeComments": true,
		"strict": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["./src/**/*", "typings.d.ts"],
	"exclude": ["node_modules", "./config/*"]
}
